<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ColorSwatch"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:height="150dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Hue"
        android:id="@+id/hue"
        android:layout_below="@+id/ColorSwatch"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="#000" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HueBar"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/ColorSwatch"
        android:layout_alignParentStart="true"
        android:background="@drawable/huebar"
        android:minHeight="35dp"
        android:indeterminate="false"
        android:max="359"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Value"
        android:id="@+id/value"
        android:textColor="#000"
        android:textSize="25sp"
        android:paddingTop="18dp"
        android:layout_below="@+id/SaturationBar"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SaturationBar"
        android:layout_marginTop="47dp"
        android:background="@drawable/saturationbar"
        android:minHeight="35dp"
        android:layout_below="@+id/HueBar"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:max="100"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Saturation"
        android:id="@+id/saturation"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/HueBar"
        android:paddingTop="18dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ValueBar"
        android:background="@drawable/valuebar"
        android:minHeight="35dp"
        android:layout_below="@+id/value"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:max="100"/>



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:minHeight="80dp"
            android:layout_alignParentEnd="true"
            android:nestedScrollingEnabled="true"
            android:layout_below="@+id/ValueBar"
            android:layout_marginTop="25dp"
            android:scrollbarStyle="outsideOverlay">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/black"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:background="#000000"
                android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Red"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#FF0000"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Lime"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#00FF00"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Blue"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#0000FF"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Yellow"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#FFFF00"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Cyan"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#00FFFF"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Magenta"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#FF00FF"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Silver"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#C0C0C0"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Gray"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#808080"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Maroon"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#800000"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Olive"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#808000"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Green"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#008000"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Purple"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#800080"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Teal"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#008080"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Navy"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:background="#000080"
                    android:layout_marginLeft="15dp"
                    android:onClick="pickColor"/>



            </LinearLayout>
        </HorizontalScrollView>


</RelativeLayout>
